---
import { getCollection } from 'astro:content';
import Layout from '../../components/Layout.astro';
import PostCard from '../../components/PostCard.astro';

export async function getStaticPaths() {
  return [
    { params: { lang: 'zh' } },
    { params: { lang: 'en' } },
  ];
}

const { lang } = Astro.params as { lang: 'zh' | 'en' };

const posts = await getCollection('posts', ({ data }) => !data.draft && data.lang === lang);
posts.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());

const featured = posts.find((p) => p.data.featured) ?? posts[0];
const latest = posts.filter((p) => p !== featured).slice(0, 12);
---

<Layout lang={lang} title={lang === 'zh' ? '博客首页' : 'Blog Home'}>
  <main class="mx-auto max-w-6xl px-4 py-10">
    <header class="mb-12">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">
        {lang === 'zh' ? '欢迎来到我的博客' : 'Welcome to My Blog'}
      </h1>
      <p class="text-lg opacity-80">
        {lang === 'zh' ? '分享技术见解、学习笔记与思考' : 'Sharing technical insights, learning notes and thoughts'}
      </p>
    </header>

    {featured ? (
      <section class="mb-16">
        <h2 class="mb-6 text-sm font-semibold uppercase tracking-wide opacity-70 flex items-center gap-2">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
          </svg>
          {lang === 'zh' ? '精选文章' : 'Featured Post'}
        </h2>
        <PostCard lang={lang} entry={featured} variant="featured" />
      </section>
    ) : null}

    <section>
      <h2 class="mb-6 text-sm font-semibold uppercase tracking-wide opacity-70 flex items-center gap-2">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path>
        </svg>
        {lang === 'zh' ? '最新文章' : 'Latest Posts'}
      </h2>
      {latest.length > 0 ? (
        <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
          {latest.map((entry) => (
            <PostCard lang={lang} entry={entry} />
          ))}
        </div>
      ) : (
        <p class="text-center py-12 opacity-70">
          {lang === 'zh' ? '暂无文章' : 'No posts yet'}
        </p>
      )}
    </section>
  </main>
</Layout>
