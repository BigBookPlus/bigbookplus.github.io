import { getCollection } from 'astro:content';
import Layout from '../../components/Layout.astro';
import PostCard from '../../components/PostCard.astro';

export async function getStaticPaths() {
  return [
    { params: { lang: 'zh' } },
    { params: { lang: 'en' } },
  ];
}

const { lang } = Astro.params as { lang: 'zh' | 'en' };

const posts = await getCollection('posts', ({ data }) => !data.draft && data.lang === lang);
posts.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());

const featured = posts.find((p) => p.data.featured) ?? posts[0];
const latest = posts.filter((p) => p !== featured).slice(0, 12);
