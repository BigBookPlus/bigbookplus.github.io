---
interface Props {
  lang: 'zh' | 'en';
  title?: string;
  description?: string;
}

const { lang, title, description } = Astro.props;
const pageTitle = title ? `${title} | ${lang === 'zh' ? '博客' : 'Blog'}` : (lang === 'zh' ? '博客' : 'Blog');
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    {description && <meta name="description" content={description} />}
    <title>{pageTitle}</title>
    <!-- KaTeX CSS for math rendering -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.css" integrity="sha384-n8MVd4RsNIU0tAv4ct0nTaAbDJwPJzDEaqSD1odI+WdtXRGWt2kTvGFasHpSy3SV" crossorigin="anonymous">
    <!-- Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-DV5FCWN9X4"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-DV5FCWN9X4');
    </script>
    <script is:inline>
      // Dark mode support
      const theme = localStorage.getItem('theme') || 'auto';
      if (theme === 'dark' || (theme === 'auto' && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
        document.documentElement.classList.add('dark');
      }
    </script>
  </head>
  <body class="relative bg-gradient-to-br from-blue-50 via-white to-purple-50 dark:from-gray-900 dark:via-gray-900 dark:to-purple-950 text-gray-900 dark:text-gray-100 transition-colors">
    <!-- Decorative background -->
    <div class="fixed inset-0 -z-10 overflow-hidden pointer-events-none">
      <div class="absolute -top-1/2 -right-1/2 w-full h-full bg-gradient-to-br from-primary-200/30 to-accent-200/30 dark:from-primary-900/20 dark:to-accent-900/20 rounded-full blur-3xl animate-float"></div>
      <div class="absolute -bottom-1/2 -left-1/2 w-full h-full bg-gradient-to-tr from-accent-200/30 to-primary-200/30 dark:from-accent-900/20 dark:to-primary-900/20 rounded-full blur-3xl animate-float" style="animation-delay: -3s;"></div>
    </div>

    <nav class="sticky top-0 z-50 backdrop-blur-lg bg-white/70 dark:bg-gray-900/70 border-b border-gray-200/50 dark:border-gray-800/50 shadow-sm">
      <div class="mx-auto max-w-6xl px-4 py-4">
        <div class="flex items-center justify-between">
          <a href={`/${lang}/`} class="text-xl font-bold bg-gradient-to-r from-primary-600 to-accent-600 bg-clip-text text-transparent hover:from-primary-500 hover:to-accent-500 transition-all">
            {lang === 'zh' ? '✨ 博客' : '✨ Blog'}
          </a>
          <div class="flex items-center gap-6">
            <a href={`/${lang}/`} class="relative group">
              <span class="hover:text-primary-600 dark:hover:text-primary-400 transition-colors">{lang === 'zh' ? '首页' : 'Home'}</span>
              <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-gradient-to-r from-primary-600 to-accent-600 group-hover:w-full transition-all duration-300"></span>
            </a>
            <a href={`/${lang}/search/`} class="relative group">
              <span class="hover:text-primary-600 dark:hover:text-primary-400 transition-colors">{lang === 'zh' ? '搜索' : 'Search'}</span>
              <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-gradient-to-r from-primary-600 to-accent-600 group-hover:w-full transition-all duration-300"></span>
            </a>
            <a href={`/${lang}/tags/`} class="relative group">
              <span class="hover:text-primary-600 dark:hover:text-primary-400 transition-colors">{lang === 'zh' ? '标签' : 'Tags'}</span>
              <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-gradient-to-r from-primary-600 to-accent-600 group-hover:w-full transition-all duration-300"></span>
            </a>
            <a href={`/${lang}/archive/`} class="relative group">
              <span class="hover:text-primary-600 dark:hover:text-primary-400 transition-colors">{lang === 'zh' ? '归档' : 'Archive'}</span>
              <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-gradient-to-r from-primary-600 to-accent-600 group-hover:w-full transition-all duration-300"></span>
            </a>
            <a href={lang === 'zh' ? '/en/' : '/zh/'} class="px-3 py-1 rounded-full bg-gradient-to-r from-primary-500 to-accent-500 text-white hover:from-primary-600 hover:to-accent-600 transition-all hover:shadow-lg">
              {lang === 'zh' ? 'EN' : '中文'}
            </a>
            <button
              id="theme-toggle"
              class="rounded-full p-2 hover:bg-primary-100 dark:hover:bg-gray-800 transition-all hover:scale-110"
              aria-label="Toggle theme"
            >
              <svg class="h-5 w-5 hidden dark:block text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z"></path>
              </svg>
              <svg class="h-5 w-5 block dark:hidden text-gray-700" fill="currentColor" viewBox="0 0 20 20">
                <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path>
              </svg>
            </button>
          </div>
        </div>
      </div>
    </nav>

    <slot />

    <footer class="relative border-t border-gray-200/50 dark:border-gray-800/50 mt-20 bg-gradient-to-r from-primary-50/50 to-accent-50/50 dark:from-gray-900/50 dark:to-gray-900/50 backdrop-blur-sm">
      <div class="mx-auto max-w-6xl px-4 py-12">
        <div class="flex flex-col items-center gap-4">
          <div class="flex gap-6 mb-4">
            <a href="https://github.com" target="_blank" rel="noopener noreferrer" class="text-gray-600 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 transition-all hover:scale-110" aria-label="GitHub">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"></path>
              </svg>
            </a>
            <a href="https://twitter.com" target="_blank" rel="noopener noreferrer" class="text-gray-600 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 transition-all hover:scale-110" aria-label="Twitter">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"></path>
              </svg>
            </a>
            <a href="/rss.xml" target="_blank" rel="noopener noreferrer" class="text-gray-600 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 transition-all hover:scale-110" aria-label="RSS">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M6.18 15.64a2.18 2.18 0 0 1 2.18 2.18C8.36 19 7.38 20 6.18 20C5 20 4 19 4 17.82a2.18 2.18 0 0 1 2.18-2.18M4 4.44A15.56 15.56 0 0 1 19.56 20h-2.83A12.73 12.73 0 0 0 4 7.27V4.44m0 5.66a9.9 9.9 0 0 1 9.9 9.9h-2.83A7.07 7.07 0 0 0 4 12.93V10.1z"></path>
              </svg>
            </a>
          </div>
          <div class="h-px w-32 bg-gradient-to-r from-transparent via-primary-500 to-transparent"></div>
          <p class="text-sm text-gray-600 dark:text-gray-400">&copy; {new Date().getFullYear()} {lang === 'zh' ? '版权所有' : 'All rights reserved'}</p>
          <p class="text-xs text-gray-500 dark:text-gray-500">{lang === 'zh' ? '用 ❤️ 构建' : 'Built with ❤️'}</p>
        </div>
      </div>
    </footer>

    <script>
      const toggle = document.getElementById('theme-toggle');
      toggle?.addEventListener('click', () => {
        const isDark = document.documentElement.classList.toggle('dark');
        localStorage.setItem('theme', isDark ? 'dark' : 'light');
      });
    </script>
  </body>
</html>
